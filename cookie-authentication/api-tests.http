### ============================================
### ДОПОЛНИТЕЛЬНО: Альтернативный способ передачи CSRF
###               через заголовок вместо query параметра
### ============================================
POST {{baseUrl}}/logout
Cookie: __Host-auth-token={{auth_token}}
X-XSRF-TOKEN: {{csrf_token}}

> {%
    client.test("Logout with header successful", function() {
        client.assert(response.status === 204 || response.status === 302,
            "Logout failed");
    });

    client.test("Auth cookie removed after logout", function() {
        var cookies = response.headers.valuesOf("Set-Cookie");
        var cookieRemoved = cookies.some(cookie =>
            cookie.includes("__Host-auth-token") &&
            (cookie.includes("Max-Age=0") || cookie.includes("Expires=Thu, 01 Jan 1970"))
        );
        client.assert(cookieRemoved, "Auth cookie was not properly removed during logout");
        client.log("✓ Кука __Host-auth-token успешно удалена");
    });

    client.test("XSRF-TOKEN cookie cleared", function() {
        var cookies = response.headers.valuesOf("Set-Cookie");
        var xsrfCleared = cookies.some(cookie =>
            cookie.includes("XSRF-TOKEN") &&
            (cookie.includes("Max-Age=0") || cookie.includes("Expires=Thu, 01 Jan 1970"))
        );
        // XSRF-TOKEN может не очищаться специально, это зависит от конфигурации
        client.assert(xsrfCleared, "XSRF-TOKEN cookie was not properly cleared");
    });
%}



